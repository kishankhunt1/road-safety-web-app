@{
    ViewData["Title"] = "Services";
}

<!-- Hero Start -->
<div class="container-fluid bg-primary p-5 hero-header mb-5">
    <div class="row py-5">
        <div class="col-12 text-center">
            <h1 class="display-1 text-white animated zoomIn">Service</h1>
            <a href="#" class="h4 text-white">Home</a>
            <i class="far fa-circle text-white px-2"></i>
            <a href="#" class="h4 text-white">Service</a>
        </div>
    </div>
</div>
<!-- Hero End -->
<!-- Services Start -->
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="text-center mx-auto mb-5" style="max-width: 600px;">
            <h5 class="text-primary text-uppercase" style="letter-spacing: 5px;">Services</h5>
            <h1 class="display-5 mb-0">Our Excellent Info Services</h1>
        </div>
        <div class="row g-5">
            <div class="col-lg-4 col-md-6 wow zoomIn" data-wow-delay="0.3s">
                <div class="service-item bg-light border-bottom border-5 border-primary rounded">
                    <div class="position-relative p-5">
                        <!-- <i class="flaticon-cctv d-block display-1 fw-normal text-secondary mb-3"></i> -->
                        <img src="~/img/cloudy.png" alt="Cloudy Image" width="40%" style="padding-bottom: 30px;">
                        <!-- <h5 class="text-primary mb-0">CCTV</h5> -->
                        <h3 class="mb-3">Weather</h3>
                        <p>Stay ahead of the weather and plan your journey accordingly with our reliable weather information service.</p>
                        <a asp-controller="Home" asp-action="Weather">Read More<i class="bi bi-arrow-right ms-2"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 wow zoomIn" data-wow-delay="0.9s">
                <div class="service-item bg-light border-bottom border-5 border-primary rounded">
                    <div class="position-relative p-5">
                        <!-- <i class="flaticon-camera d-block display-1 fw-normal text-secondary mb-3"></i> -->
                        <img src="~/img/Accident.png" alt="Cloudy Image" width="40%" style="padding-bottom: 30px;">
                        <!-- <h5 class="text-primary mb-0">CCTV</h5> -->
                        <h3 class="mb-3">Accident</h3>
                        <p>Avoid delays and plan your journey ahead with our reliable traffic information service. Stay safe with our traffic updates.</p>
                        <a asp-controller="POB_Accident" asp-action="Index">Read More<i class="bi bi-arrow-right ms-2"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 wow zoomIn" data-wow-delay="0.6s">
                <div class="service-item bg-light border-bottom border-5 border-primary rounded">
                    <div class="position-relative p-5">
                        <!-- <i class="flaticon-surveillance d-block display-1 fw-normal text-secondary mb-3"></i> -->
                        <img src="~/img/siren.png" alt="Cloudy Image" width="40%" style="padding-bottom: 30px;">
                        <!-- <h5 class="text-primary mb-0">CCTV</h5> -->
                        <h3 class="mb-3">Emergency</h3>
                        <p>In case of an emergency, our comprehensive information service provides quick access to vital resources.</p>
                        <a asp-controller="POB_Emergency" asp-action="Index">Read More<i class="bi bi-arrow-right ms-2"></i></a>
                    </div>
                </div>
            </div>
          
           
        </div>
    </div>
</div>
<!-- Services End -->

<!-- Testimonial Start -->
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="text-center mx-auto mb-5" style="max-width: 600px;">
            <h5 class="text-primary text-uppercase" style="letter-spacing: 5px;">Testimonial</h5>
            <h1 class="display-5 mb-0">What People Say About Our Services</h1>
        </div>
        <div class="owl-carousel testimonial-carousel">
            <div class="text-center pb-4">
                <img class="~/img-fluid mx-auto rounded-circle" src="~/img/testimonial-1.jpg" style="width: 100px; height: 100px;">
                <div class="testimonial-text bg-light rounded p-4 mt-n5">
                    <p class="mt-5">
                        I feel much more prepared and confident on the road now, knowing that I have access to real-time traffic updates and emergency information. Thank you for creating such a valuable resource!
                    </p>
                    <h4 class="text-truncate">Client Name</h4>
                    <i>Profession</i>
                </div>
            </div>
            <div class="text-center">
                <img class="~/img-fluid mx-auto rounded-circle" src="~/img/testimonial-2.jpg" style="width: 100px; height: 100px;">
                <div class="testimonial-text bg-light rounded p-4 mt-n5">
                    <p class="mt-5">
                        The weather information service has helped me avoid bad weather conditions and plan my journey accordingly.
                    </p>
                    <h4 class="text-truncate">Client Name</h4>
                    <i>Profession</i>
                </div>
            </div>
            <div class="text-center">
                <img class="~/img-fluid mx-auto rounded-circle" src="~/img/testimonial-3.jpg" style="width: 100px; height: 100px;">
                <div class="testimonial-text bg-light rounded p-4 mt-n5">
                    <p class="mt-5">
                        The emergency information service is a lifesaver. Knowing that I have quick access to vital resources in case of an emergency gives me peace of mind.
                    </p>
                    <h4 class="text-truncate">Client Name</h4>
                    <i>Profession</i>
                </div>
            </div>
            <div class="text-center">
                <img class="~/img-fluid mx-auto rounded-circle" src="~/img/testimonial-4.jpg" style="width: 100px; height: 100px;">
                <div class="testimonial-text bg-light rounded p-4 mt-n5">
                    <p class="mt-5">
                        The road safety tool has made a significant difference in my daily commute. It has saved me time, money, and most importantly, kept me safe.
                    </p>
                    <h4 class="text-truncate">Client Name</h4>
                    <i>Profession</i>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        var element1 = document.getElementById("Home");
        var element2 = document.getElementById("About");
        var element3 = document.getElementById("Service");
        var element4 = document.getElementById("Contact");
        element1.className = "nav-item nav-link";
        element2.className = "nav-item nav-link";
        element3.className = "nav-item nav-link active";
        element4.className = "nav-item nav-link";
    </script>
}
