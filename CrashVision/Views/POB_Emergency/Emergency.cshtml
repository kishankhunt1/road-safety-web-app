@using System.Data
@model DataTable
@{
    ViewData["Title"] = "Emergency";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mt-2"><button style="margin-left:45%" type="button" class="btn btn-danger" id="b">Emergency SOS</button></div>
<div class="container mt-4">
<table class="table table-hover" id="myTable">
    <thead>
        <tr>
            @*<th scope="col">Emergency ID</th>*@
            <th scope="col">Emergency Name</th>
            <th scope="col">Emergency Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach(DataRow dr in Model.Rows){
        <tr>
            @*<td scope="row">@dr["EmergencyID"]</td>*@
            <td>@dr["EmergencyName"]</td>
            <td>@dr["EmergencyNumber"]</td>
        </tr>
        }
        
    </tbody>
</table>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>

    <script>
        let b= document.getElementById("b");
        b.addEventListener("click", function(){
            swal("SOS Help is on the way to your location.", {
                icon: "success",
            });
        });
    </script>
}